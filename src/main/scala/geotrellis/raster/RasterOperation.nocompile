package geotrellis.raster

import geotrellis._
import scala.{PartialFunction => PF}

import akka.actor._

/**
 * A RasterOp is an operation with a raster input.
 */
trait WithRasterInput[+T]  { self:Operation[T] => 
  def r:geotrellis.Operation[Raster]
}


class RasterOp1[T](r:Op[Raster])(f:(Raster)=>StepOutput[T]) extends Op1(r)(f) {
  def runWithRaster(content:Context, raster:Op[Raster]) = runAsync(List(raster))
}
